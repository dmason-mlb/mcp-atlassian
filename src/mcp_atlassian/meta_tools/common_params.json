{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Common Parameters Registry for MCP Atlassian Meta-Tools",
  "description": "Standardized parameter definitions to reduce token usage through reusability",
  "version": "1.0",
  
  "common_parameters": {
    
    "issue_key": {
      "type": "string",
      "pattern": "^[A-Z]+-\\d+$",
      "description": "Jira issue key",
      "example": "PROJ-123",
      "usage_count": 15
    },
    
    "project_key": {
      "type": "string", 
      "pattern": "^[A-Z]+$",
      "description": "Jira project key",
      "example": "PROJ",
      "usage_count": 12
    },
    
    "page_id": {
      "type": "string",
      "description": "Confluence page ID",
      "example": "123456789",
      "usage_count": 8
    },
    
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50,
      "default": 10,
      "description": "Maximum results",
      "usage_count": 18
    },
    
    "start_at": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Pagination start index",
      "usage_count": 16
    },
    
    "fields": {
      "type": "string",
      "description": "Comma-separated field list",
      "example": "summary,status,assignee",
      "usage_count": 14
    },
    
    "expand": {
      "type": ["string", "null"],
      "description": "Fields to expand",
      "example": "changelog,comments",
      "usage_count": 10
    },
    
    "board_id": {
      "type": "string",
      "description": "Agile board ID", 
      "example": "1000",
      "usage_count": 7
    },
    
    "sprint_id": {
      "type": "string",
      "description": "Sprint ID",
      "example": "10001", 
      "usage_count": 6
    },
    
    "user_identifier": {
      "type": "string",
      "description": "User identifier",
      "example": "user@example.com",
      "usage_count": 9
    },
    
    "title": {
      "type": "string",
      "description": "Title or name",
      "usage_count": 11
    },
    
    "summary": {
      "type": "string", 
      "description": "Issue summary",
      "usage_count": 8
    },
    
    "description": {
      "type": ["string", "null"],
      "description": "Description in Markdown",
      "usage_count": 9
    },
    
    "comment": {
      "type": "string",
      "description": "Comment text in Markdown",
      "usage_count": 7
    },
    
    "space_key": {
      "type": "string",
      "description": "Confluence space key",
      "example": "SPACE",
      "usage_count": 6
    },
    
    "jql": {
      "type": "string",
      "description": "JQL query string",
      "example": "project = PROJ AND status = Open",
      "usage_count": 5
    },
    
    "cql": {
      "type": "string", 
      "description": "CQL query string",
      "example": "space = SPACE AND type = page",
      "usage_count": 4
    },
    
    "dry_run": {
      "type": "boolean",
      "default": false,
      "description": "Validate without executing",
      "usage_count": 8
    },
    
    "comment_limit": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "default": 10,
      "description": "Maximum comments to return",
      "usage_count": 5
    },
    
    "start_date": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Start date (YYYY-MM-DD)",
      "example": "2024-01-15",
      "usage_count": 4
    },
    
    "end_date": {
      "type": ["string", "null"],
      "format": "date", 
      "description": "End date (YYYY-MM-DD)",
      "example": "2024-02-15",
      "usage_count": 4
    },
    
    "name": {
      "type": "string",
      "description": "Name or label",
      "usage_count": 6
    },
    
    "state": {
      "type": "string",
      "enum": ["future", "active", "closed"],
      "description": "Sprint state",
      "usage_count": 3
    },
    
    "goal": {
      "type": ["string", "null"],
      "description": "Sprint goal",
      "usage_count": 3
    },
    
    "link_id": {
      "type": "string",
      "description": "Link ID",
      "usage_count": 3
    },
    
    "attachment_id": {
      "type": "string", 
      "description": "Attachment ID",
      "usage_count": 3
    },
    
    "version_name": {
      "type": "string",
      "description": "Version name",
      "usage_count": 4
    },
    
    "minor_edit": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a minor edit",
      "usage_count": 2
    },
    
    "parent_id": {
      "type": ["string", "null"],
      "description": "Parent page ID",
      "usage_count": 3
    }
  },
  
  "context_defaults": {
    "search_operations": {
      "limit": 25,
      "start_at": 0,
      "fields": "summary,status,assignee"
    },
    
    "create_operations": {
      "fields": {},
      "dry_run": false
    },
    
    "get_operations": {
      "expand": "changelog,comments",
      "comment_limit": 10
    },
    
    "update_operations": {
      "minor_edit": false,
      "dry_run": false  
    },
    
    "pagination_operations": {
      "limit": 10,
      "start_at": 0
    }
  },
  
  "parameter_combinations": {
    "jira_issue_operations": ["issue_key", "fields", "expand", "comment_limit"],
    "jira_search_operations": ["jql", "fields", "limit", "start_at"],
    "jira_agile_operations": ["board_id", "sprint_id", "limit", "start_at"],
    "confluence_page_operations": ["page_id", "title", "space_key", "parent_id"],
    "confluence_search_operations": ["cql", "limit", "start_at"],
    "user_operations": ["user_identifier"],
    "pagination_operations": ["limit", "start_at"],
    "date_operations": ["start_date", "end_date"]
  },
  
  "optimizations": {
    "token_savings": {
      "before_optimization": "197 parameter descriptions totaling ~10,078 bytes",
      "after_optimization": "27 shared definitions totaling ~4,031 bytes",
      "reduction_percentage": 60
    },
    "reusability": {
      "most_reused": ["limit", "start_at", "issue_key", "fields"],
      "reuse_factor": "15+ tools per common parameter"
    }
  }
}